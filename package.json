{
  "name": "file-explorer-previewer",
  "version": "1.0.0",
  "license": "ISC",
  "title": "File explorer & Previewer",
  "scripts": {
    "lint": "tsc",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "pre-deploy": "yarn clean-cache && yarn build-css-prod && yarn lint && yarn build",
    "clean-cache": "rm -rf .next && rm -rf node_modules/.cache",
    "build-css": "postcss tailwind.css -o index.css",
    "build-css-prod": "cross-env NODE_ENV=production postcss tailwind.css -o index.css"
  },
  "dependencies": {
    "next": "^9.4.0",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.6",
    "prism-react-renderer": "^1.1.0",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-icons": "^3.10.0",
    "react-loading-skeleton": "^2.0.1",
    "react-markdown": "^4.3.1",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.0.1",
    "styled-components": "^5.1.0",
    "tailwindcss": "^1.4.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.35",
    "@types/styled-components": "5.0.1",
    "autoprefixer": "^9.7.6",
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "husky": "^4.2.5",
    "next-compose-plugins": "^2.2.0",
    "postcss-cli": "^7.1.1",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn && yarn pre-deploy"
    }
  }
}
